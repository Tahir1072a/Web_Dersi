<!-- Bu view layout yapılanması içerir. Yani ortak render edilen görüntü kodları burada yazılacaktır.-->
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Üst ve Alt Menü Tasarımı</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

        .upper-menu {
            background-color: #444;
            display: flex;
            justify-content: center;
            padding: 5px;
        }

            .upper-menu a {
                color: #fff;
                text-decoration: none;
                margin: 0 10px;
            }

        .lower-menu {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #444;
            text-align: center;
            padding: 5px;
        }

            .lower-menu a {
                color: #fff;
                text-decoration: none;
                margin: 0 10px;
            }
    </style>
</head>
<body>
    <header>
        <h1>Üst Menü Tasarımı</h1>
    </header>
    <div class="upper-menu">
        <a href="/Anasayfa/Anasayfa">Anasayfa</a>
        <a href="/Anasayfa/HtmlBilgi">HtmlBilgi</a>
        <a href="/Anasayfa/Sayfa2">Sayfa 2</a>
    </div>

    @await Component.InvokeAsync("Hakkımda") 
    <partial name="~/Views/Anasayfa/Partials/_subMenuPartial.cshtml" />
    <div>
        @RenderBody()
    </div>

    
</body>
</html>
